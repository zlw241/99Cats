<tr>
  <td><%= req.start_date %></td>
  <td><%= req.end_date %></td>
  <td>
    <% if current_user.id == req.cat.user_id %>
      <% if req.pending? %>
          <!-- <%= button_to "Approve", approve_cat_rental_request_url(req) %> -->
          <form action="<%=approve_cat_rental_request_url(req)%>" method="post">
            <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
            <input type="submit" name="" value="Approve">
          </form>
          <form action="<%=deny_cat_rental_request_url(req)%>" method="post">
            <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
            <input type="submit" name="" value="Deny">
          </form>
          <!-- <%= button_to "Deny", deny_cat_rental_request_url(req) %> -->
      <% else %>
        <%= req.status %>
      <% end %>
    <% else %>
      <%= req.status %>
    <% end %>
  </td>
  <td><%= req.renter.user_name %></td>
</tr>
