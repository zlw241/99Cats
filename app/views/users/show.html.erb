
<h2>My Cats</h2>
<ul style="list-style-type: none;">
<% current_user.cats.each do |cat| %>
  <li>
    <a href="<%= cat_url(cat)%>"><%= cat.name %></a><br>
    <img style="margin-bottom: 20px; width: 110px;" src="<%= cat.image.url %>">
  </li>
<% end %>
</ul>

<h2>Rental Requests</h2>
<a href="<%= new_cat_rental_request_url %>">New Request</a>
<table>
  <tr>
    <th>Cat</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>
  <% current_user.cat_rental_requests.each do |req| %>
    <td><a href="<%= cat_url(req.cat) %>"><%= req.cat.name %></a></td>
    <td><%= req.start_date %></td>
    <td><%= req.end_date %></td>
    <td><%= req.status %></td>
  <% end %>
</table>
